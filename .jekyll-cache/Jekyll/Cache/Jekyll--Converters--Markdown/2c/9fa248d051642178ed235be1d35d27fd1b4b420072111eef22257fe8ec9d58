<p>class App extends Component {
  // return <MyClassComponent>í—¬ë¡œìš°</MyClassComponent>;
  render(){
    return (
      &lt;div&gt;
        &lt;ScrollBox ref={(ref) =&gt; (this.scrollBox = ref)} /&gt;
        &lt;button onClick={() =&gt; this.scrollBox.scrollToBottom()}&gt;to bottom&lt;/button&gt;
      &lt;/div&gt;
    );
  }
}</p>

